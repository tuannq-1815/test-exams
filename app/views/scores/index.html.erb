<% provide :title, t(".test") %>
<h1><%= t ".test" %></h1>
<%= form_for :test, url: new_score_path, method: :get do |form| %>
  <div class="row">
    <div class="col-sm-3">
      <%= label_tag :subject %>
      <%= select_tag :subject, options_for_select(Subject.pluck :id ),
        class: "form-control select-form" %>
    </div>
    <div class="col-sm-3">
      <%= form.label :test %>
      <%= form.select :test, options_for_select([]), {},
        class: "form-control select-form" %>
    </div>
    <div class="button-cr col-sm-2">
     <%= form.submit "Create Exam", class: "btn btn-primary" %>
    </div>
  </div>
  <hr>
  <h4><%= t ".test_detail"%></h4>
  <table class="table table-striped">
    <thead>
      <tr>
        <th style="width:20%"><%= t ".created_date"%></th>
        <th style="width:20%"><%= t ".subject"%></th>
        <th><%= t ".status"%></th>
        <th><%= t ".duration"%>Duration</th>
        <th><%= t ".question_number"%></th>
        <th><%= t ".score"%></th>
      </tr>
    </thead>
      <tr>
      </tr>
  </table>
<% end %>
<%= javascript_include_tag "tests" %>
