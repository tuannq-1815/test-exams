<% provide(:title, t(".add_new_subject")) %>
<% provide(:button_text, t(".create_subject")) %>
<h1><%= t ".add_new_subject" %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for [:admin, @subject] do |f| %>
      <%= render "shared/error_messages", object: f.object %>

      <%= f.label :name %>
      <%= f.text_area :name, class: "form-control" %>

      <%= f.label :author_name %>
      <%= f.text_area :author_name, class: "form-control" %>

      <%= f.submit t(".create_subject"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
